    <LinearLayout
        android:id="@+id/ll_league_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/ll_video_play"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

<!--            <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"-->
<!--                android:id="@+id/iv_video_img"-->
<!--                android:layout_width="130dp"-->
<!--                android:layout_height="80dp"-->
<!--                android:scaleType="fitXY"-->
<!--                app:srcCompat="@drawable/painter" />-->

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

            <ImageView
                android:layout_height="80dp"
                android:layout_width="130dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_video_img"
                app:srcCompat="@drawable/painter"
                android:scaleType="fitXY"/>

            <ImageView
                android:layout_height="@dimen/_30sdp"
                android:layout_width="@dimen/_30sdp"
                android:src="@drawable/ic_play_c"
                android:layout_centerInParent="true"/>

        </RelativeLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:visibility="gone"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:id="@+id/tv_video_coin"
                    android:gravity="center"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12-nov-2019"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="normal"
                    />

            </LinearLayout>

            <TextView
                android:paddingLeft="@dimen/_10sdp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/tv_video_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Interior measuring"
                android:textSize="16dp"
                android:textStyle="normal" />

            <TextView
                android:paddingLeft="@dimen/_10sdp"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="video 1:30 mins"
                android:textSize="14dp"
                android:textStyle="normal" />



        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--            <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"-->
            <!--                android:id="@+id/iv_video_img"-->
            <!--                android:layout_width="130dp"-->
            <!--                android:layout_height="80dp"-->
            <!--                android:scaleType="fitXY"-->
            <!--                app:srcCompat="@drawable/painter" />-->

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <ImageView
                    android:layout_height="80dp"
                    android:layout_width="130dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:srcCompat="@drawable/painter"
                    android:scaleType="fitXY"/>

                <ImageView
                    android:layout_height="@dimen/_30sdp"
                    android:layout_width="@dimen/_30sdp"
                    android:src="@drawable/ic_play_c"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/veriantsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:visibility="gone"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12-nov-2019"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="normal"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_10sdp"
                android:text="Exterior measuring"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="normal" />

            <TextView
                android:paddingLeft="@dimen/_10sdp"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="video 1:30 mins"
                android:textSize="14dp"
                android:textStyle="normal" />



        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"

        />

    </LinearLayout>

