<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragment.Profile_Fragment">


        <ScrollView
            android:id="@+id/scrllview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/Linr1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_view_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/img_logo"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/logo" />


                    <TextView
                        android:id="@+id/tv_profile_name"
                        style="@style/bold_tx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:text="Raghav Developer"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/tv_profile_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:text="Raghav.Dev@gmail.com"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:text="Video preference"
                        android:textColor="@color/grey"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:drawableRight="@drawable/ic_keyboard_arrow"
                        android:padding="5dp"
                        android:text="Download options"
                        android:textColor="@color/dark_grey"
                        android:textSize="16dp"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:drawableRight="@drawable/ic_keyboard_arrow"
                        android:padding="5dp"
                        android:text="Video playback options"
                        android:textColor="@color/dark_grey"
                        android:textSize="16dp"
                        android:visibility="gone" />


                    <TextView
                        android:id="@+id/tv_download"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:drawableRight="@drawable/ic_keyboard_arrow"
                        android:padding="5dp"
                        android:text="Downloads"
                        android:textColor="@color/dark_grey"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_wishlist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:drawableRight="@drawable/ic_keyboard_arrow"
                        android:padding="5dp"
                        android:text="Wishlist"
                        android:textColor="@color/dark_grey"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:text="Account settings"
                        android:textColor="@color/grey"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:drawableRight="@drawable/ic_keyboard_arrow"
                        android:padding="5dp"
                        android:text="Account security"
                        android:textColor="@color/dark_grey"
                        android:textSize="16dp" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:drawableRight="@drawable/ic_keyboard_arrow"
                        android:padding="5dp"
                        android:text="Email notification preference"
                        android:textColor="@color/dark_grey"
                        android:textSize="16dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:text="Support"
                        android:textColor="@color/grey"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:drawableRight="@drawable/ic_keyboard_arrow"
                        android:padding="5dp"
                        android:text="About Hunar"
                        android:textColor="@color/dark_grey"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:drawableRight="@drawable/ic_keyboard_arrow"
                        android:padding="5dp"
                        android:text="Frequently asked questions"
                        android:textColor="@color/dark_grey"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:drawableRight="@drawable/ic_keyboard_arrow"
                        android:padding="5dp"
                        android:text="Share the app"
                        android:textColor="@color/dark_grey"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_louout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:drawableRight="@drawable/ic_keyboard_arrow"
                        android:padding="5dp"
                        android:text="Logout the app"
                        android:textColor="@color/dark_grey"
                        android:textSize="16dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp">

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</layout>