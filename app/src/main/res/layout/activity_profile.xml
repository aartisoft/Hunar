<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/ic_back"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
        android:layout_gravity="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20pt"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HUNAR"
            style="@style/bold_tx"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center"
            android:textSize="12pt"
            />

        <ImageView
            android:id="@+id/ic_editprofile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/edit_profile"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROFILE"
            style="@style/bold_tx"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:textSize="9pt"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.66dp"
            android:layout_margin="10dp"
            android:background="@color/blue"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/name"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name : "
                android:textColor="@color/grey"
                android:textSize="8pt"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:id="@+id/tx_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aakash Sharma"
                android:textColor="@color/black"
                android:textSize="8pt"
                android:layout_marginLeft="20pt"
                android:layout_marginTop="2dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/phone"
                android:layout_marginTop="2dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile No. : "
                android:textColor="@color/grey"
                android:textSize="8pt"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:id="@+id/tx_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9977262554"
                android:textColor="@color/black"
                android:textSize="8pt"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="2dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">


            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/email"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-Mail : "
                android:textColor="@color/grey"
                android:textSize="8pt"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:id="@+id/tx_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aakash039@gmail.com"
                android:textColor="@color/black"
                android:textSize="8pt"
                android:layout_marginLeft="19pt"
                android:layout_marginTop="2dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="20dp"
                android:src="@drawable/home"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address : "
                android:textColor="@color/grey"
                android:textSize="8pt"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:id="@+id/tx_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vijay Nagar, Indore"
                android:textColor="@color/black"
                android:textSize="8pt"
                android:layout_marginLeft="12.44pt"
                android:layout_marginTop="2dp"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.66dp"
            android:layout_margin="10dp"
            android:background="@color/blue"
            />

    </LinearLayout>

</RelativeLayout>