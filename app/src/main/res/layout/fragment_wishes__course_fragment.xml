<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    tools:context=".Fragment.Wishes_Course_fragment">


    <ScrollView
        android:visibility="gone"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/main_banner_object_new"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                />

            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Want to save something for later?"
                style="@style/bold_tx"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="22dp"
                />

            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your wishlist will go here."
                android:textColor="@color/grey"
                android:textAlignment="center"
                android:textSize="14dp"
                style="@style/tx_vu"

                />

            <LinearLayout
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Browse categories"
                style="@style/bold_tx"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                android:textSize="22dp"
                />


                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Development"
                    style="@style/tx_wish"
                    android:textColor="@color/black"
                    android:textAlignment="textStart"
                    android:padding="5dp"
                    android:drawableLeft="@drawable/cart_icon"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Business"
                    style="@style/tx_wish"
                    android:textColor="@color/black"
                    android:textAlignment="textStart"
                    android:padding="5dp"
                    android:drawableLeft="@drawable/cart_icon"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    tools:ignore="RtlCompat" />
                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IT &amp; Software"
                    style="@style/tx_wish"
                    android:textColor="@color/black"
                    android:textAlignment="textStart"
                    android:padding="5dp"
                    android:drawableLeft="@drawable/cart_icon"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Design"
                    style="@style/tx_wish"
                    android:textColor="@color/black"
                    android:textAlignment="textStart"
                    android:padding="5dp"
                    android:drawableLeft="@drawable/cart_icon"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    tools:ignore="RtlCompat" />


                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Marketing"
                    style="@style/tx_wish"
                    android:textColor="@color/black"
                    android:textAlignment="textStart"
                    android:padding="5dp"
                    android:drawableLeft="@drawable/cart_icon"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Music"
                    style="@style/tx_wish"
                    android:textColor="@color/black"
                    android:textAlignment="textStart"
                    android:padding="5dp"
                    android:drawableLeft="@drawable/cart_icon"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lifestyle"
                    style="@style/tx_wish"
                    android:textColor="@color/black"
                    android:textAlignment="textStart"
                    android:padding="5dp"
                    android:drawableLeft="@drawable/cart_icon"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Health"
                    style="@style/tx_wish"
                    android:textColor="@color/black"
                    android:textAlignment="textStart"
                    android:padding="5dp"
                    android:drawableLeft="@drawable/cart_icon"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_open_details"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >


            <TextView
                android:layout_weight="0.1"
                android:id="@+id/tv_video_nextplay"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textAlignment="textStart"
                android:paddingLeft="5dp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Interior Measuring"
                android:textColor="@color/colorPrimary"
                android:textSize="7pt"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal|center_vertical"
                tools:ignore="RtlCompat" />

            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/heart_icon"
                    >
                </ImageView>
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_video"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="textStart"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Video-1:30 mins"
            android:textColor="@color/colorPrimary"
            android:textSize="5pt"
            android:layout_gravity="center_horizontal|center_vertical"
            tools:ignore="RtlCompat" />


        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <TextView
                android:layout_weight="0.1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textAlignment="textStart"
                android:paddingLeft="5dp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exterior Measuring"
                android:textColor="@color/colorPrimary"
                android:textSize="7pt"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal|center_vertical"
                tools:ignore="RtlCompat" />
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/heart_icon"
                    >
                </ImageView>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="textStart"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Video-1:30 mins"
            android:textColor="@color/colorPrimary"
            android:textSize="5pt"
            android:layout_gravity="center_horizontal|center_vertical"
            tools:ignore="RtlCompat" />


        <TextView
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="textStart"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check your knowledge"
            android:textColor="@color/white"
            android:textSize="7pt"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal|center_vertical"
            tools:ignore="RtlCompat" />

        <TextView
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="textStart"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start"
            android:textColor="@color/white"
            android:textSize="5pt"
            android:layout_gravity="center_horizontal|center_vertical"
            tools:ignore="RtlCompat" />

    </LinearLayout>






</LinearLayout>