<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    >

    <include
        layout="@layout/layout_toolbar"
        android:id="@+id/toolbar_tag"/>


    <androidx.core.widget.NestedScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tv_subcat_title"
                android:textAlignment="center"
                android:padding="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Basic painter cource"
                android:textColor="@color/white"
                android:textSize="10pt"
                android:background="@color/colorPrimary"
                android:layout_gravity="center_horizontal|center_vertical"
                />

                <ImageView
                    android:layout_margin="10dp"
                    android:scaleType="fitXY"
                    android:id="@+id/iv_cource"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/basic_painter_course"
                    >
                </ImageView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="8dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorPrimary"
                    android:text="Description"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    >
                </TextView>

                <TextView
                    android:padding="@dimen/_5sdp"
                    android:id="@+id/tv_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="The Basic Painter Course covers every aspect of basic level painting. In this course one will get to learn from the surface preparation to different types of painting methods. There are practice sessions in between to revise the content in term of gaining mastery. This course will take you from having little knowledge in painting to having deep understanding in painting. So hurry up!! Take the course and become Beginner to expert!!"
                    android:textStyle="normal"
                    android:textSize="13dp"
                    >
                </TextView>

                    <TextView
                        android:visibility="invisible"
                        android:layout_marginRight="10dp"
                        android:textAlignment="textEnd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/colorPrimary"
                        android:text="view more."
                        android:textStyle="normal"
                        android:textSize="13dp"
                        >
                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="8dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textColor="@color/colorPrimary"
                        android:text="Certificate"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        >
                    </TextView>

                    <TextView
                        android:id="@+id/tv_certi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:text="To become a certified painter complete the course and pay the required amount to take the test."
                        android:textColor="@color/black"
                        android:textSize="13dp"
                        android:textStyle="normal">

                    </TextView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <TextView
                    android:id="@+id/tv_mrp"
                    android:textAlignment="textStart"
                    android:paddingLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RS.499"
                    android:textColor="@color/white"
                    android:textSize="8pt"
                    android:layout_gravity="center_horizontal|center_vertical"
                    tools:ignore="RtlCompat" />

            <TextView
                android:textAlignment="textStart"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=": Offer"
                android:textColor="@color/white"
                android:textSize="8pt"
                android:layout_gravity="center_horizontal|center_vertical"
                tools:ignore="RtlCompat" />



                <TextView
                    android:id="@+id/tv_offer_price"
                    android:textAlignment="textStart"
                    android:paddingLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free"
                    android:textColor="@color/white"
                    android:textSize="8pt"
                    android:layout_gravity="center_horizontal|center_vertical"
                    tools:ignore="RtlCompat" />

            </LinearLayout>


            <TextView
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Buy now"
                android:textSize="16dp"
                android:textStyle="bold"
                style="@style/boldtx"
                android:padding="15dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:textAlignment="center"
                />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_course"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/tv_take_know"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Check your knowledge"
                android:textSize="16dp"
                android:textStyle="bold"
                style="@style/boldtx"
                android:padding="15dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:textAlignment="center"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >

            </LinearLayout>



        </LinearLayout>


    </androidx.core.widget.NestedScrollView>



</LinearLayout>